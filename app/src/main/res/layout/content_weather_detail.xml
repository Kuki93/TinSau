                android:textColor="@color/colorABlack"
                android:textStyle="bold"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/co"
                app:layout_constraintBottom_toTopOf="@id/so2_value"
                app:layout_constraintTop_toBottomOf="@id/line" />

            <TextView
                android:id="@+id/co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO"
                android:textColor="@color/colorABlack"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/so2"
                app:layout_constraintRight_toLeftOf="@id/pm10"
                app:layout_constraintTop_toTopOf="@id/so2" />

