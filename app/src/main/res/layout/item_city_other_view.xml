<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="26dp"
    android:paddingRight="13dp">

    <ImageView
        android:id="@+id/typeImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_circle"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textColor="@color/colorBlack"
        android:drawableRight="@drawable/ic_location_on_red_400_18dp"
        android:textSize="@dimen/font_size_17"
        android:drawablePadding="3dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/cityType"
        app:layout_constraintLeft_toRightOf="@id/typeImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cityType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/font_size_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/typeImg"
        app:layout_constraintTop_toBottomOf="@id/city" />

    <Switch
        android:id="@+id/mswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/MySwitch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    

</android.support.constraint.ConstraintLayout>
