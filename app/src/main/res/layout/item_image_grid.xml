<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/widget_size_6"
    app:cardElevation="@dimen/widget_size_1"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/imageSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#88222222"
            android:paddingBottom="@dimen/widget_size_2"
            android:paddingLeft="@dimen/widget_size_8"
            android:paddingRight="@dimen/widget_size_8"
            android:paddingTop="@dimen/widget_size_2"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_11"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_margin="@dimen/widget_size_6"
            android:drawableLeft="@drawable/ic_zan"
            android:drawablePadding="@dimen/widget_size_2"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_11"
            android:textStyle="bold" />
    </FrameLayout>
</android.support.v7.widget.CardView>